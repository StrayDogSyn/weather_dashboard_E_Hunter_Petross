# Weather Dashboard Environment Configuration
# Copy this file to .env and add your actual API keys

# ⚠️ SECURITY WARNING ⚠️
# Never commit the .env file to version control!
# Your actual API keys should only be in the .env file, never in this example file.

# OpenWeatherMap API Configuration
OPENWEATHER_API_KEY=your_api_key_here

# Optional: Additional API service keys for future expansion
WEATHERAPI_KEY=your_weatherapi_key_here
VISUALCROSSING_API_KEY=your_visualcrossing_key_here

# Application Configuration
WEATHER_DEFAULT_CITY=New York
WEATHER_THEME=darkly
WEATHER_LOG_LEVEL=INFO
WEATHER_DEBUG=false

# Data Configuration  
WEATHER_CACHE_DURATION=300
WEATHER_AUTO_REFRESH=false
WEATHER_AUTO_REFRESH_INTERVAL=300

# UI Configuration
WEATHER_WINDOW_TITLE=Weather Dashboard
WEATHER_MIN_SIZE=800,600
WEATHER_DEFAULT_SIZE=1200,800
WEATHER_UPDATE_INTERVAL=30000

# Feature Flags
WEATHER_ENABLE_ML_PREDICTIONS=false
WEATHER_ENABLE_WEATHER_ALERTS=true
WEATHER_ENABLE_LOCATION_SERVICES=false
WEATHER_PRIVACY_MODE=false

# API Rate Limiting
WEATHER_API_TIMEOUT=10
WEATHER_MAX_RETRIES=3
WEATHER_RATE_LIMIT_PER_MINUTE=60

# Development Settings
WEATHER_PERFORMANCE_LOGGING=true
WEATHER_API_LOGGING=true
WEATHER_UI_LOGGING=false

# Data Storage
WEATHER_MAX_HISTORY_ENTRIES=1000
WEATHER_EXPORT_FORMAT=json
WEATHER_BACKUP_ENABLED=true

# Security Settings (Advanced)
WEATHER_MASK_API_KEYS=true
WEATHER_LOG_API_RESPONSES=false
